
@model OnlineShop.Models.ChangPasswordModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_UserManage.cshtml";

}

@{ var message = ViewBag.Message ?? "";}
<div class="box">

    <div class="heading">
        <h3 class="text-uppercase">Đổi mật khẩu</h3>
    </div>

    <form method="post" action="~/user/ChangePassword">
        @Html.ValidationSummary("", new { @class = "text-danger", style = "text-align:left" })
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="password_old">Mật khẩu củ</label>
                    <input type="password" class="form-control" id="password_old" name="OldPass">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="password_1">Mật khẩu mới</label>
                    <input type="password" class="form-control" id="password_1" name="NewPass">
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="password_2">Nhập lại mật khẩu mới</label>
                    <input type="password" class="form-control" id="password_2" name="RetypeNewPass">
                </div>
            </div>
        </div>
        <!-- /.row -->

        <div class="text-center">
            <button type="submit" class="btn btn-template-main"><i class="fa fa-save"></i>Lưu</button>
        </div>
    </form>

</div>
<!-- /.box -->

@section Script {
   

<script>
var message = '@message';
    if (message)
    {
        $('#alertMessage').html(message);
     //   $('#login-modal').appendTo("body").modal('show');
           $('#AlertModal').modal('show');

    }
</script>

}