
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>DANH SÁCH KHÁCH HÀNG</h2>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table id="myGrid" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Stt</th>
                            <th>Mã KH</th>
                            <th>Tài khoản</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


<!-- Delete  Modal -->
<div class="modal fade" id="DeleteAlertModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title" id="exampleModalLabel">Thông báo</h5>
            </div>
            <div class="x_content">
                <h2 style="padding-left:5%"> Bạn muốn xóa đơn khách hàng này ? </h2>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
                <button type="button" onclick="Delete()" class="btn btn-primary">Xóa</button>
            </div>
        </div>
    </div>
</div>

<!--Alert Modal -->
<div class="modal fade" id="AlertModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width:30%; margin:10px auto;display:table">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title" id="exampleModalLabel">Thông báo</h5>
            </div>
            <div class="x_content">
                <div style="margin:0 auto; display:table">
                    <img src="" id="alerticon" style="width:50px" /> <h2 id="message"></h2>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!--View Detail Modal -->
<div class="modal fade bs-example-modal-lg" id="ViewDetaiModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Xem chi tiết khách hàng</h4>
            </div>
            <div class="x_content" style="margin-left:5%">
                <div>
                    <p> Mã khách hàng: <span id="CustomerId"></span></p>
                    <p> Tài khoản: <span id="UserName"></span></p>
                    <p> Tên khác hàng: <span id="CustomerName"></span></p>
                    <p> Số điện thoại: <span id="Phone"></span></p>
                    <p> Email: <span id="Email"></span></p>
                    <p> Địa chỉ: <span id="Address"></span></p>
                    <p> Trạng thái: <span id="Status"></span></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="Update()" class="btn btn-primary">Cập nhập</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Script {
    <script src="~/Areas/Admin/javascript/user/Index.js"></script>
}

