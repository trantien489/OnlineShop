
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>DANH SÁCH KHÁCH HÀNG</h2>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table id="myGrid" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Stt</th>
                            <th>Mã KH</th>
                            <th>Họ</th>
                            <th>Tên</th>
                            <th>Số điện thoại</th>
                            <th>Địa chỉ</th>
                            <th>Email</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


<!-- Delete  Modal -->
<div class="modal fade" id="DeleteAlertModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title" id="exampleModalLabel">Thông báo</h5>
            </div>
            <div class="x_content">
                <h2 style="padding-left:5%"> Bạn muốn xóa đơn hàng này? </h2>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
                <button type="button" onclick="Delete()" class="btn btn-primary">Xóa</button>
            </div>
        </div>
    </div>
</div>

<!--Alert Modal -->
<div class="modal fade" id="AlertModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width:30%; margin:10px auto;display:table">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title" id="exampleModalLabel">Thông báo</h5>
            </div>
            <div class="x_content">
                <div style="margin:0 auto; display:table">
                    <img src="" id="alerticon" style="width:50px" /> <h2 id="message"></h2>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!--View Detail Modal -->
<div class="modal fade bs-example-modal-lg" id="ViewDetaiModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Xem chi tiết đơn hàng</h4>
            </div>
            <div class="x_content" style="margin-left:5%">
                <div>
                    <p> Mã khách hàng: <span id="CustomerId"></span></p>
                    <p> Tên khác hàng: <span id="CustomerName"></span></p>
                    <p> Người nhận hàng: <span id="ReceiveName"></span></p>
                    <p> SDT người nhận: <span id="ReceivePhone"></span></p>
                    <p> Địa chỉ người nhận: <span id="ReceiveAddress"></span></p>
                    <p> Email người nhận: <span id="ReceiveEmail"></span></p>
                </div>
                <br>
                <h2>Mã đơn hàng: <span id="InvoiceId"></span></h2>
                <p>
                    <h2>Trạng thái: </h2>
                    <div style="margin-left:5%" id="InvoiceStatus">
                    </div>
                </p>
                <table class="table" style="width:80%">
                    <thead>
                        <tr>
                            <th>Stt</th>
                            <th>Tên sản phẩm</th>
                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                            <th>Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody id="InvoiceDetail">
                        <tr>
                            <td>1</td>
                            <td>Mark</td>
                            <td>mdo</td>
                            <td>Mark</td>
                            <td>Otto</td>
                        </tr>
                    </tbody>
                    <tfoot style="font-weight:bold; font-size:20px">
                    <td colspan="4">Tổng cộng</td>
                    <td id="InvoiceTotal"></td>
                    </tfoot>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="Update()" class="btn btn-primary">Cập nhập</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Script {
    <script src="~/Areas/Admin/javascript/user/Index.js"></script>
}

